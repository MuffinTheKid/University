<Window x:Class="PrimeNumberGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="350" Background="#FF281230">
    <Viewbox Width="320" Height="300">
        <Grid Height="300">
            <TextBox x:Name="infoBox" HorizontalAlignment="Left" Margin="10,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="#FF787878" Width="320" Height="230"/>
            <Button x:Name="generatePrime" Content="Generate Prime" HorizontalAlignment="Left" Margin="116,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Background="#FF787878" Click="generatePrime_Click" Height="45" Width="114"/>
        </Grid>
    </Viewbox>

</Window>
